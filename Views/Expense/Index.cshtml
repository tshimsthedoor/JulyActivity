@model IEnumerable<JulyActivity.Models.Expense>

<div class="container  p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">Create  an expense</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ExpenseName
                    </th>
                    <th>
                        Amount
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td width="30%">@item.ExpenseName</td>
                        <td width="30%">@item.Amount</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet.</p>
    }
</div>